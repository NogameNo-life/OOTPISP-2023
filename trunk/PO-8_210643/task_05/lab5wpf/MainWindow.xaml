<Window x:Class="lab5wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="135" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ButtonAddData" Click="ButtonAddData_OnClick"  Grid.Row="0" Content="Manage Data" Margin="10"></Button>
        <Button x:Name="ButtonCreateDb" Click="ButtonCreateDb_OnClick" Grid.Row="2" Content="Create DB" Margin="10"></Button>
        <Button x:Name="ButtonShowRequest" Click="ButtonShowRequest_OnClick" Grid.Row="1"  Content="Show Request" Margin="10,0,10,0" ></Button>
    </Grid>
</Window>
