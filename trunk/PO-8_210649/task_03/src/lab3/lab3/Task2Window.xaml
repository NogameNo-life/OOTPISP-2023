<Window x:Class="lab3.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="Task2Window" SizeToContent="Height" Width="200">
    <StackPanel>
        <TextBox Name="Arr1TextBox" Margin="3"></TextBox>
        <TextBox Name="Arr2TextBox" Margin="3"></TextBox>
        <Button Name="RunButton" Click="RunButton_OnClick" Content="Run" Margin="3"></Button>
        <Label Name="ResultLabel" Content="Result: "></Label>
    </StackPanel>
</Window>
