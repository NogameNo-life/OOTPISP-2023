<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Лабораторная работа №8" Grid.Column="0" Margin="30">
            <Label.RenderTransform>
                <RotateTransform Angle="90"></RotateTransform>
            </Label.RenderTransform>
        </Label>
        <Canvas Name="Canvas"></Canvas>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="Button" Click="Button_OnClick" Content="Run" Grid.Row="1"/>
            <Button Name="ButtonStop" Click="ButtonStop_OnClick" Content="Stop"/> 
        </StackPanel>
        
    </Grid>
</Window>
